<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
	<ribbon>
		<tabs>
			<tab id="customTab" label="ppMeta">
				<group id="mainGroup" label="Main">
					<button id="openTextEditor" label="Open Editor" onAction="OnOpenMainClick"/>
				</group>
				<group id="toolsGroup" label="Tools">
					<button id="listFormatButton" label="List All Layouts" onAction="OnFormatsClick"/>
					<button id="listPlaceHolderButton" label="List Placeholders" onAction="OnPlaceHolderClick"/>
				</group>
				<group id="SettingsGroup" label="Settings">
					<button id="optionsButton" label="Settings" onAction="OnOptionsClick"/>
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>
